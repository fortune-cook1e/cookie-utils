{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"baseUrl": "."
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
