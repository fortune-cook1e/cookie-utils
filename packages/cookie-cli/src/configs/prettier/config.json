{
  "config": {
    "tabWidth": 2,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "useTabs": false
  },
  "checkFiles": [
    ".prettierrc.json",
    ".prettierrc",
    ".prettierrc.yml",
    ".prettierrc.yaml",
    ".prettierrc.json5"
  ],
  "devDependencies": {
    "prettier": "^2.3.0"
  },
  "output": {
    "file": ".prettierrc"
  }
}
