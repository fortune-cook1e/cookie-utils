{
	"extends": "@tsconfig/node14/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "Node16",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node16",
		"resolveJsonModule": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
